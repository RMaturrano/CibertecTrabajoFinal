<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



        <android.support.v7.widget.Toolbar
            android:id="@+id/tbDetPedido"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/toolbar_background"
            android:minHeight="?attr/actionBarSize"/>

        <TextView
            android:id="@+id/tvdetNomCliente"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Emma Sophia"
            android:textColor="@color/colorBlanco"
            android:background="@color/button_material_dark"
            android:typeface="sans"
            android:textSize="16sp"
            android:textAlignment="center"
            android:paddingTop="3dp" />
    <TextView
        android:id="@+id/tvIdPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="PRODUCTOS DEL CARRITO"
            android:textStyle="bold"
            android:textSize="15sp"
            android:typeface="sans"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorBlanco" />

        <View style="@style/Separator" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvDetPedido"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@color/colorAccent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TOTAL"
            android:textColor="@color/colorBlanco" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="S/. "
            android:textColor="@color/colorBlanco" />

        <TextView
            android:id="@+id/tvDetTotalPedido"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="@dimen/edittextcrud"
            android:textColor="@color/colorverde" />
    </LinearLayout>
</LinearLayout>
