<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trabajo.capturapedido.capturapedido">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <meta-data
        android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".PedidoActivity" />
        <activity android:name=".ClienteActivity"/>
        <activity android:name=".Cliente2Activity" />
        <activity android:name=".EditClienteActivity" />
        <activity android:name=".PedidoDetActivity" />
        <activity android:name=".ProductoActivity" />
        <activity android:name=".EditPedidoActivity" />
        <activity android:name=".CrearEditProductoActivity"/>
        <activity android:name=".DetalleProductoActivity"></activity>
        <activity android:name=".ListaProductoActivity"></activity>
        <activity android:name=".MapaClienteActivity"></activity>
        <activity
            android:name=".ClientesActivity"
            android:label="@string/title_activity_clientes"
            android:theme="@style/AppTheme"></activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_api_key" />
    </application>

</manifest>